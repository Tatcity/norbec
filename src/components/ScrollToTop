import { useEffect } from "react";
import { useLocation } from "react-router-dom";

export default function ScrollToTop() {
  const { pathname } = useLocation();

  useEffect(() => {
    console.log("ScrollToTop triggered at path:", pathname);
    window.scrollTo({
      top: 0,
      left: 0,
      behavior: "auto", // change to "smooth" if you want glide
    });
  }, [pathname]);

  return null;
}
